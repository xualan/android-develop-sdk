<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_annotation_test"
                style="@style/alan_button_style"
                android:text="@string/alan_btn_annotation_test"
                />
            <Button
                android:id="@+id/btn_dialog_test"
                style="@style/alan_button_style"
                android:text="@string/alan_btn_dialog_test"
                />
            <Button
                android:id="@+id/btn_toast_test"
                style="@style/alan_button_style"
                android:text="@string/alan_btn_toast_test"
                />
            <Button
                android:id="@+id/btn_log_test"
                style="@style/alan_button_style"
                android:text="@string/alan_btn_log_test"
                />
            <Button
                android:id="@+id/btn_service_test"
                style="@style/alan_button_style"
                android:text="@string/alan_btn_service_test"
                />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
